<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.loner.memorygame">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.FX">
        <activity android:name="kr.loner.memorygame.ui.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="kr.loner.memorygame.ui.activity.NoticeBoardActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="kr.loner.memorygame.ui.activity.GameActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>