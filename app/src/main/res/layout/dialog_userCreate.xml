<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/ic_baseline_person_32"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:textColor="@color/colorCommand"
        android:textSize="14sp"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="사용할 닉네임을 만들어주세요"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@+id/et_userName"
        app:layout_constraintStart_toStartOf="@+id/et_userName" />

    <TextView
        android:id="@+id/tv_appExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱 종료하기"
        android:textColor="@color/colorLike"
        app:layout_constraintBottom_toBottomOf="@+id/tv_userCreate"
        app:layout_constraintEnd_toEndOf="@+id/et_userName"
        app:layout_constraintTop_toTopOf="@+id/tv_userCreate" />

    <TextView
        android:id="@+id/tv_userCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="계정 생성하기"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        app:layout_constraintStart_toStartOf="@+id/et_userName"
        app:layout_constraintTop_toBottomOf="@+id/et_userName" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>